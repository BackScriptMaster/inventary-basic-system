<div class="bg-white p-4 rounded-md m-4 flex-1">
  <%= link_to "New product" , new_product_path,
    class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium w-44" %>
  <%= link_to "Export to Excel" , products_path(format: :xlsx),
    class: "rounded-lg py-3 px-5 bg-green-600 text-white block font-medium w-44" %>
  <h2 class="text-gray-500 text-lg font-semibold pb-4">Products</h2>
  <div class="my-1"></div> 
  <!-- Espacio de separación -->
  <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
  <!-- Línea con gradiente -->
  <table class="w-full table-auto text-sm">
    <thead>
      <tr class="text-sm leading-normal">
        <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">
          Id</th>
        <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">
          Name</th>
        <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">
          References</th>
        <th
          class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-right">
          Cantidad</th>

        <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">
          Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
      <tr class="hover:bg-grey-lighter">
        <td class="py-2 px-4 border-b border-grey-light"><%= product.id%></td>
        <td class="py-2 px-4 border-b border-grey-light"> <%= product.name %> </td>
        <td class="py-2 px-4 border-b border-grey-light text-right"> <%= product.reference%></td>
        <td class="py-2 px-4 border-b border-grey-light text-right"> <%= product.quantity %> </td>
        <td class="py-2 px-4 border-b border-grey-light text-right">
          <%= link_to "Details", product_path(product), class: "bg-green-400 px-3 py-2" %> 
        </td>
      </tr>
      <% end%>
      
    </tbody>
  </table>
  <!-- Botón "Ver más" para la tabla de Transacciones -->
  <div class="text-right mt-4">
    <button class="bg-cyan-500 hover:bg-cyan-600 text-white font-semibold py-2 px-4 rounded">
      Ver más
    </button>
  </div>


</div>